<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1711354319455-1" author="vlad">
        <preConditions onFail="MARK_RAN">
            <foreignKeyConstraintExists foreignKeyName="fk_histories_on_ticket"/>
        </preConditions>
        <dropForeignKeyConstraint baseTableName="histories" constraintName="fk_histories_on_ticket"/>
    </changeSet>
    <changeSet id="1711354319455-2" author="vlad">
        <addForeignKeyConstraint baseTableName="histories" baseColumnNames="ticket_id"
                                 constraintName="fk_histories_on_ticket"
                                 onDelete="CASCADE"
                                 referencedTableName="tickets" referencedColumnNames="id"
        />
    </changeSet>
</databaseChangeLog>